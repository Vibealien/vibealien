{
  "name": "compiler-service",
  "version": "1.0.0",
  "description": "Solana program compilation service with Docker-in-Docker",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "@prisma/client": "^5.7.1",
    "axios": "^1.6.2",
    "fs-extra": "^11.2.0",
    "ioredis": "^5.3.2",
    "nats": "^2.18.0",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "dockerode": "^4.0.2",
    "tar": "^6.2.0",
    "uuid": "^9.0.1",
    "@vibecode/types": "workspace:*",
    "@vibecode/utils": "workspace:*"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/cors": "^2.8.17",
    "@types/dockerode": "^3.3.23",
    "@types/tar": "^6.1.11",
    "@types/fs-extra": "^11.0.4",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  }
}
