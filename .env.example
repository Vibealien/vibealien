# Environment Configuration Template
# Copy this file to .env and fill in your values

# ============================================
# General
# ============================================
NODE_ENV=development

# ============================================
# JWT & Security
# ============================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# ============================================
# Database
# ============================================
# PostgreSQL
POSTGRES_USER=vibe_user
POSTGRES_PASSWORD=vibe_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database URLs (auto-constructed in docker-compose)
AUTH_DATABASE_URL=postgresql://vibe_user:vibe_password@postgres:5432/auth_db
USER_DATABASE_URL=postgresql://vibe_user:vibe_password@postgres:5432/user_db
PROJECT_DATABASE_URL=postgresql://vibe_user:vibe_password@postgres:5432/project_db
COMPILER_DATABASE_URL=postgresql://vibe_user:vibe_password@postgres:5432/compiler_db
NOTIFICATION_DATABASE_URL=postgresql://vibe_user:vibe_password@postgres:5432/notification_db

# ============================================
# Redis
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# Message Queue (NATS)
# ============================================
NATS_URL=nats://localhost:4222

# ============================================
# Solana
# ============================================
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
# Optional: Your own RPC for better rate limits
# SOLANA_RPC_URL=https://solana-devnet.g.alchemy.com/v2/YOUR_API_KEY

# ============================================
# Service Ports
# ============================================
API_GATEWAY_PORT=8000
AUTH_SERVICE_PORT=8001
USER_SERVICE_PORT=8002
PROJECT_SERVICE_PORT=8003
COMPILER_SERVICE_PORT=8004
COLLABORATION_SERVICE_PORT=8005
NOTIFICATION_SERVICE_PORT=8006

# ============================================
# Frontend
# ============================================
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# ============================================
# Compiler Service
# ============================================
BUILD_TIMEOUT=300000
MAX_CONCURRENT_BUILDS=3

# ============================================
# File Upload (if implemented)
# ============================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.rs,.toml,.json,.md

# ============================================
# Monitoring (optional)
# ============================================
# SENTRY_DSN=your_sentry_dsn_here
# LOG_LEVEL=debug
